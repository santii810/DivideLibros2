<Window x:Class="DivideLibros2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DivideLibros2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Name="panelPrincipal" Orientation="Vertical">
            <Border BorderBrush="Black" BorderThickness="2" Margin="5">

                <StackPanel Name="Botones" Orientation="Horizontal" Height="110">
                    <Image Source="Imagenes/libros.png" Height="80" Margin="10"/>
                    <StackPanel  Orientation="Vertical" Width="280">
                        <Button Content=" Seleccionar Libro" Width="100" Height="40" Margin="10" Click="Button_Click" HorizontalAlignment="Center"/>
                        <Label Name="labelLibro" Content="" Margin="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
